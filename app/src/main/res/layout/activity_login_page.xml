<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".LoginPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:gravity="center"
            android:text="LOGIN PAGE"
            android:textColor="@color/colorAccent"
            android:textSize="50dp"
            android:textStyle="italic|bold"></TextView>

        <EditText
            android:id="@+id/edt1"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:hint="username"
            android:textColor="@android:color/background_dark">

        </EditText>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:hint="password"
            android:inputType="numberPassword|textPassword"
            android:textColor="@android:color/background_dark">

        </EditText>

        <Button
            android:id="@+id/btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Login"
            android:textColor="@android:color/background_light"></Button>


        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Attempts remaining : 5"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="DEFAULT USERNAME - admin@1234 PASSWORD - 12345"
            android:textSize="20dp"
            android:textStyle="bold|italic"></TextView>

    </LinearLayout>
</ScrollView>